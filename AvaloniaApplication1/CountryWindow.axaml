<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="900"
        x:Class="AvaloniaApplication1.CountryWindow"
        Title="CountryWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Назад" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35"
                HorizontalContentAlignment="Center" Click="BackButtonClick" />

        <Label Content="Название" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,70"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1"
               BorderBrush="Black" />
        <Label Name="NameLabel" Width="700" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"
               Margin="0" HorizontalContentAlignment="Center" BorderThickness="1" BorderBrush="Black" />

        <Button Content="Изменить" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="30" HorizontalContentAlignment="Center" Click="ChangeButtonClick" />
    </Grid>
</Window>